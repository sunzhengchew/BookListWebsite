<section class="ui center aligned middle aligned segment">
<div class="content"> 
    <h2>Welcome to my book collection!</h2>
    <h3>
      This app is gonna show you books I pick for collection!
    </h3>  
  <img src="https://cdn.glitch.global/6d279091-10e0-44aa-91a9-405dacd6b0b1/library.webp?v=1709346417197" class="ui rounded image"
       style="position:relative;
              bottom:43%;
              left:4em;"
       width="300px" height="300px">
  <div class="ui small inverted  statistics" style="position:relative;top:17em;left:3em">
    <div class="statistic">
    <div class="label" style="text-decoration-line: underline;">
      Total Booklist
    </div>
    <div class="value">
      <img src="https://cdn.glitch.global/13846978-a6d2-4332-b1a9-13b6de65e9c2/book%20shelficon.webp?v=1712109008474" class="ui circular inline image"
           style="position:relative;
                  top:8px;">
      {{displayNumBooklists}}
    </div>  
  </div>
    <div class="statistic">
    <div class="label" style="text-decoration-line: underline;">
      Total Book
    </div>
    <div class="value">
      <img src="https://cdn.glitch.global/13846978-a6d2-4332-b1a9-13b6de65e9c2/books.png?v=1712255050518" class="ui circular inline image"
           style="position:relative;
                  top:10px;">  
      {{displayNumBooks}}
    </div>
  </div>
  <div class="statistic">
  <div class="label" style="text-decoration-line: underline;">
      Average Book Amount
  </div>
    <div class="value">
      <img src="https://cdn.glitch.global/13846978-a6d2-4332-b1a9-13b6de65e9c2/avg.png?v=1712262766408" class="ui circular inline image"
           style="position:relative;
                  top:7px;">  
      {{displayAvgBooks}}
    </div>
  </div>  
  </div> 
  <div class="ui tiny olive inverted  statistics" style="position:relative; top:17em; left:6em">
  <div class="statistic">
    <div class="label" style="text-decoration-line: underline;">
      Most of The Book are
    </div>
    <div class="value">
      {{displayMaxBooklists}}
    </div>
  </div>
  <div class="statistic">
    <div class="label" style="text-decoration-line: underline;">
      Least of The Book are
    </div>
    <div class="value"> 
      {{displayMinBooklists}}
    </div>
  </div>
  </div> 
</div>
</section>
