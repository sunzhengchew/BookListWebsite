{{> menu}}

<style>
  h3 {
  border-radius: 8px;
  border-style:inset;
  position:relative;
  left:27em;
  top:33px;
  padding:20px;
  margin:10px;
  width:40%;
  font-family:cursive;
  background-color:#84A9C0;
  text-shadow: 2px 2px 5px #F7A072;
  color:white;
  } 
  
  h2{
  border-radius: 8px;
  position:relative;
  left:12em;
  top:65px;
  margin:120px;
  padding:20px;
  color: white;
  text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;
  background-color:#84A9C0;
  border-style:inset;
  width:40%;
  }
  
