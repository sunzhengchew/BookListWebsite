<style>
  h3{
    text-align:center;
  }
</style>
{{#if details}}
{{#each details}}
<body style="background-image:url({{background}});">
  
  <div class="ui card" style="margin-right: auto; margin-left: auto;">
    <div class="image">
    <img src="{{image}}">
    </div>
    <div class="content">
        <a class="header" style="text-align:center;padding-bottom:10px;">{{ genre}}</a>
        <div class="meta">
        <span class="date"><i class="pencil alternate icon"></i>{{author}}</span>
        </div>
        <div class="description">
        {{descript}}
       </div>
       </div>
      <div class="extra content">
      <i class="calendar outline icon"></i>Public in: {{publicYear}}
     </div>
     </div>
  <a href="/picklist/{{../id}}/deletepick/{{id}}" class="ui icon button"> 
    <i class="trash icon"></i>
</a>
{{/each}}
  {{else}}
    <h3 class="ui message">
      Start Adding details for your books!
    </h3>
  {{>addpick}}
  </body>
{{/if}}