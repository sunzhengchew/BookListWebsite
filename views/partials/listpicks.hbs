<style>
  h3{
    text-align:center;
  }
</style>
{{#if details}}
{{#each details}}
<form 
          class = "ui form" 
          action="/picklist/{{../id}}/updatepick/{{id}}" 
          method="POST"
        >
<body style="background-image:url({{background}});">
  <div class="ui card" style="margin-right: auto; margin-left: auto;">
    <div class="image">
    <img src="{{image}}">
    </div>
    <div class="content">
        <a class="header" style="text-align:center;padding-bottom:10px;"> <span class="ui input">
               <input type="text" name="genre" autofocus required 
                      genre = "Please include a valid genre" placeholder="Genre" 
					  value = "{{genre}}">
              </span>
      </a>
        <div class="meta">
        <span class="date"><i class="pencil alternate icon"></i>
         <span class="ui input">
               <input type="text" name="author" autofocus required 
                      author = "Please include a valid author" placeholder="Author" 
					  value = "{{author}}">
              </span>
          </span>
        </div>
        <div class="description">
        <span class="ui input">
               <input type="text" name="descript" autofocus required 
                      descript = "Please include a valid descript" placeholder="Description" 
					  value = "{{descript}}">
        </span>
       </div>
       </div>
      <div class="extra content">
      <i class="calendar outline icon"></i>Public in: {{publicYear}}
     </div>
     </div>
  <a href="/picklist/{{../id}}/deletepick/{{id}}" class="ui icon button"> 
    <i class="trash icon"></i>
</a>
  <div class="ui buttons">
  <button class="ui button">Delete</button>
  <div class="or"></div>
  <button class="ui positive button active">Edit</button>
  </div>
  {{else}}
    <h3 class="ui message">
      Start Adding details for your books!
    </h3>
  {{>addpick}}
  </body>
</form>
{{/each}}
{{/if}}