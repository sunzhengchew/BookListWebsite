{{#if singlePicklist.details}}
{{#each singlePicklist.details}}
<body style="background-image:url(https://cdn.glitch.global/6d279091-10e0-44aa-91a9-405dacd6b0b1/back.jpg.avif?v=1709352742838);">
  <div class="ui card" style="margin-right: auto; margin-left: auto;">
    <div class="image">
    <img src="{{image}}">
    </div>
    <div class="content">
        <a class="header" style="text-align:center;padding-bottom:10px;">{{genre}}</a>
        <div class="meta">
        <span class="date"><i class="pencil alternate icon"></i>{{author}}</span>
        </div>
        <div class="description">
        {{descript}}
       </div>
       </div>
      <div class="extra content">
      <i class="calendar outline icon"></i>Public in: {{publicYear}}
     </div>
     </div>
  {{else}}
    <h3 class="ui message">
      Empty Picklist!
    </h3>
</body>  
{{/each}}
{{/if}}