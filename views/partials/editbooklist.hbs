<div class="hide" id="edit{{@index}}">
<section
      class="ui secondary inverted teal left aligned middle aligned segment"
      style="border-style:outset"
    >
  <form class="ui stacked segment form" method="POST"
      action="/dashboard/updatebooklist/{{booklistId}}" >
    <span class="ui input">
      <h3 class="ui header" style="font-family:cursive">
        <input type="text" name="category" required
          title="Please include a valid Category" 
		  placeholder="Category" value="{{category}}">
      </h3>
      </span>
      <a href="/booklist/{{id}}" class="ui icon button">
        <i class="open folder icon"></i>
      </a>
     <button type = "reset" class="ui icon button"  id="hideEdit{{@index}}" 
	          title="Exit without saving">
        <i class="ui undo icon"></i>
      </button>
      <button type = "submit"  class="ui icon button" 
	          title="Save changes">
        <i class="ui save icon"></i>
      </button>
  </form>
</section>
</div>