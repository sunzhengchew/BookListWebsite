<section
    class="ui secondary inverted teal left aligned middle aligned segment"
    style="border-style:outset" id="picklist{{@index}}"
  >
    <h3 class="ui header" style="font-family:cursive">
      {{capitalise bookName}}
    </h3>
    <a href="/picklist/{{id}}" class="ui icon button" >
      <i class="open folder icon"></i>
    </a>
    <button class="ui icon button" title="Edit picklist" id="showEdit{{@index}}">
      <i class="ui pencil icon"></i>
    </button>
    <a href="/pickboard/deletepicklist/{{id}}" class="ui icon button">
      <i class="trash icon"></i>
    </a>
  </section>