<form class="ui stacked segment form" action="/playlist/{{singlePlaylist.id}}/addsong" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Name</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
	  placeholder="Title">
    </div>
    <div class="field">
      <label>Author</label>
      <input type="text" name="author" required title = "Please include a valid Author"
	  placeholder="author"  >
    </div>
    <div class="field">
      <label>Genre</label>
      <input type="text" name="genre" autofocus required title = "Please include a valid Genre"
	  placeholder="genre">
    </div>
    <div class="field">
      <label>Public Year</label>
      <input type="text" name="public" autofocus required title = "Please include a valid Public Date"
	  placeholder="public">
    </div>
  </div>
  <button class="ui blue submit button">Add Song</button>
</form>