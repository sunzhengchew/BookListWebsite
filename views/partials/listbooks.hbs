{{#if books}}

  <table class="ui selectable celled inverted teal table">
    <thead>
      <tr>
        <th class="four wide"><i class="book icon"></i>Book Name</th>
        <th class="four wide"><i class="image outline icon"></i>Book Cover</th>
        <th class="four wide"><i class="pencil alternate icon"></i>Author</th>
        <th class="three wide"><i class="tag icon"></i>Genre</th>
        <th class="three wide"><i class="calendar times outline icon"></i>Publication</th>
        <th class="one wide"></th>
        <th class="one wide"></th>
      </tr>
    </thead>
    <tbody>
      {{#each books}}
      <form 
          class = "ui stacked segment form" 
          action="/booklist/{{../id}}/updatebook/{{id}}" 
          method="POST"
        >
        <tr class="fields">
          <td class="field">
            <span class="ui input">
               <input type="text" name="name" autofocus required 
                      title = "Please include a valid Title" placeholder="Title" 
					  value = "{{name}}">
              </span>
          </td>
          <td class="field">
            <img src="{{image}}">
          </td>
          <td class="field">
            <span class="ui input">
               <input type="text" name="author" autofocus required 
                      title = "Please include a valid Title" placeholder="Author" 
					  value = "{{author}}">
              </span>
          </td>
          <td class="field">
            <span class="ui input">
               <input type="text" name="genre" autofocus required 
                      title = "Please include a valid Title" placeholder="Genre" 
					  value = "{{genre}}">
              </span>
          </td>
          <td class="field">
           <span class="ui input">
               <input type="text" name="publicYear" autofocus required 
                      title = "Please include a valid Title" placeholder="PublicYear" 
					  value = "{{publicYear}}">
              </span>
          </td>
          <td class="center aligned">
              <button type = "submit" class="ui icon button">
                <i class="ui pencil icon"></i>
              </button>
            </td>
          <td class="center aligned">
          <a href="/booklist/{{../id}}/deletebook/{{id}}" 
	         class="ui icon button" title="Delete Book">
          <i class="ui trash icon"></i>
          </a>
          </td>
        </tr>
      </form>
      {{/each}}
    </tbody>
  </table>

  {{else}}
    <h3 class="ui message">
      Empty Booklist!
    </h3>

{{/if}}