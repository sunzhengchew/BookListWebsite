<section class="ui secondary inverted brown left aligned middle aligned segment">
  
  <h2><div class="dashtitle">My highlighted books</div></h2>
  {{#if picklists}}
  {{#each picklists}}
   {{> listOnePicklist picklistId=../id}}
   {{> editPicklist picklistId=../id}}
  <script>
    document.querySelector("#showEdit{{@index}}").addEventListener ('click', () => {
        document.querySelector("#picklist{{@index}}").style.display = "none";
        document.querySelector("#edit{{@index}}").style.display = "block";
    })
    document.querySelector("#hideEdit{{@index}}").addEventListener ('click', () => {
        document.querySelector("#picklist{{@index}}").style.display = "block";
        document.querySelector("#edit{{@index}}").style.display = "none";
    })
</script>
  {{/each}}
  {{else}}
  <div class="ui olive large icon message">
     <i class="huge icons">
  <i class="book icon"></i>
  <i class="bottom right corner heart outline icon"></i>
</i>
  <div class="">
    <div class="header">
      Start Adding Your Favourite Book
    </div>
    <p>Tips: Remember adding the details inside it.</p>
  </div>
    </div>
  {{/if}}
</section>