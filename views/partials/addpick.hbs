<form class="ui stacked segment form" action="/picklist/{{id}}/addpick" method="POST">
  <div class="four fields">
    <div class="field">
      <label>Author</label>
      <input type="text" name="author" autofocus required title = "Please include a valid author"
	  placeholder="Enter author">
    </div>
    <div class="field">
      <label>Genre</label>
      <input type="text" name="genre" required title = "Please include a valid genre"
	  placeholder="Enter genre"  >
    </div>
    <div class="field">
      <label>Public Year</label>
      <input type="text" name="publicYear" required title = "Please include a valid publicYear"
	  placeholder="Enter Public Year"  >
    </div>
    <div class="field">
      <label>Descript</label>
      <input type="text" name="descript" required title = "Please include a valid descript"
	  placeholder="Enter descript"  >
    </div>
  </div>
  <button class="ui blue submit button">Add Details</button>
</form>